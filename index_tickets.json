          "filter": [
            "lowercase",
            "brazilian_stop",
            "brazilian_stemmer",
            "asciifolding"
          ]
        }
      },
      "filter": {
        "brazilian_stop": {
          "type": "stop",
          "stopwords": "_brazilian_"
        },
        "brazilian_stemmer": {
          "type": "stemmer",
          "language": "brazilian"
        }
      }
    }
